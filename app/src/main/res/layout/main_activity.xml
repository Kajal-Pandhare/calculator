<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_margin="10dp"
    android:padding="20px">

   <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textSize="40dp"
       android:id="@+id/et"></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn1"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:text="1"
                android:textSize="24sp"></Button>

            <Button
                android:id="@+id/btn2"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:text="2"
                android:textSize="24sp"></Button>

            <Button
                android:id="@+id/btn3"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:text="3"
                android:textSize="24sp"></Button>

            <Button
                android:id="@+id/btnplus"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:text="+"
                android:textSize="24sp"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:text="4"
                android:textSize="24sp"></Button>

            <Button
                android:id="@+id/btn5"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:text="5"
                android:textSize="24sp"></Button>

            <Button
                android:id="@+id/btn6"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:text="6"
                android:textSize="24sp"></Button>

            <Button
                android:id="@+id/btnminus"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:text="-"
                android:textSize="24sp"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:text="7"
                android:textSize="24sp"></Button>

            <Button
                android:id="@+id/btn8"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:text="8"
                android:textSize="24sp"></Button>

            <Button
                android:id="@+id/btn9"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:text="9"
                android:textSize="24sp"></Button>

            <Button
                android:id="@+id/btnmul"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:text="*"
                android:textSize="24sp"></Button>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn0"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:text="0"
            android:textSize="24sp"></Button>

        <Button
            android:id="@+id/btndot"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:text="."
            android:textSize="24sp"></Button>

        <Button
            android:id="@+id/btnequal"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:text="="
            android:textSize="24sp"></Button>

        <Button
            android:id="@+id/btndiv"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:text="/"
            android:textSize="24sp"></Button>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clear"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:text="clear"
                android:textSize="24sp"></Button>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
